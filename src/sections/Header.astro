<header
  id="mainHeader"
  class="animate-fade-in-up fixed left-0 top-0 w-full z-50 flex items-center text-white transition-all duration-300 ease-in-out px-5 overflow-hidden"
>
  <div class="flex w-full items-center justify-between px-10 py-5 relative z-10 transition-all duration-300 ease-in-out">
    <div class="flex items-center justify-start w-[150px] hover:scale-105 transition-transform duration-500">
      <img src="/Logo.svg" alt="Kaede Project Logo" class="max-h-6" />
    </div>

    <nav class="flex-1 flex justify-center text-[14px] tracking-tight space-x-8">
      <a href="#" class="hover:text-gray-400 transition duration-300 ease-in-out">HOME</a>
      <a href="#" class="hover:text-gray-400 transition duration-300 ease-in-out">PROJECTS</a>
      <a href="#" class="hover:text-gray-400 transition duration-300 ease-in-out">ABOUT</a>
      <a href="#" class="hover:text-gray-400 transition duration-300 ease-in-out">SERVICES</a>
    </nav>

    <div class="flex items-center justify-end w-[150px]">
      <button
        class="cta transition duration-500 px-5 py-[5px] rounded-lg text-[14px] mix-blend-screen tracking-tight"
      >
        Contact
      </button>
    </div>
  </div>
</header>

<style>
  .cta {
    background: rgba(77, 77, 77, 0.6);
    color: white;
    border: none;
  }
  .cta:hover {
    background: rgba(255, 255, 255, 0.95);
    color: black;
  }

  /* Header con barrido */
  #mainHeader {
    height: 110px;
    transition: height 0.3s ease;
  }
  #mainHeader.scrolled {
    height: 65px;
  }
  #mainHeader::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 1);
    transform: translateY(-100%);
    transition: transform 0.5s ease;
    z-index: 0;
    pointer-events: none;
  }
  #mainHeader.scrolled::before {
    transform: translateY(0);
  }
</style>

<script>
  const header = document.getElementById("mainHeader");
  window.addEventListener("scroll", () => {
    header.classList.toggle("scrolled", window.scrollY > 20);
  });
</script>
